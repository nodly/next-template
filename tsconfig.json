{
  "extends": "./tsconfig.strict",
  "compilerOptions": {
    /* Base Options: */
    "allowJs": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,

    /* Bundled projects */
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "moduleResolution": "Bundler",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
